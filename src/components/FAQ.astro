---
import faqData from '../data/faq.json'; // Adjust the path if needed
---

<section class="max-w-2xl mx-auto py-8">
  <h2 class="text-3xl font-bold mb-6 text-center dark:text-gray-300">Frequently Asked Questions</h2>
  <div class="space-y-4">
    {faqData.map((item, idx) => (
      <details class="border rounded-lg p-4 bg-gray-300" key={idx}>
        <summary class="font-semibold cursor-pointer">{item.question}</summary>
        <p class="mt-2 text-gray-700">{item.answer}</p>
      </details>
    ))}
  </div>
</section>
